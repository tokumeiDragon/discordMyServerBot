{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run + Debug (autoâ€‘restart)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
			"args": [
				"--respawn",
				"--transpile-only",
				"--inspect=9229",
				"src/index.ts",
				"DEV"
			],
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"autoAttachChildProcesses": true,
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}