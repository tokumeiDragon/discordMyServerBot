{
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"compilerOptions": {
		"sourceMap": true,
		"inlineSources": true,
		"target": "ES2020",
		"module": "Node16",
		"rootDir": "src",
		"resolveJsonModule": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	}
}